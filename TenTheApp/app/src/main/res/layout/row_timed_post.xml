<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black_translucent">

    <RelativeLayout
        android:id="@+id/notification_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/tabbar4" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/user_img"
            android:text="Test Name"
            android:textColor="@color/white_color"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/action_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/user_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/user_img"
            android:src="@drawable/commentselected" />

        <TextView
            android:id="@+id/action_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@+id/postIcon"
            android:layout_toRightOf="@id/action_img"
            android:text="Comment"
            android:textColor="@color/white_color" />

        <TextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:text="10m"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/postIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tabbar4selected"
            android:layout_alignTop="@+id/action_img"
            android:layout_alignLeft="@+id/post_time"
            android:layout_alignStart="@+id/post_time" />

        <TextView
            android:id="@+id/noti_tym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/action_img"
            android:layout_marginTop="10dp"
            android:text="1w"
            android:textColor="@color/white_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/sepration"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/notification_row"
        android:background="@color/gray" />
</RelativeLayout>