<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_view_invite"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_btn_black"
            android:padding="5dp"
            android:text="@string/invite"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_view_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text_view_invite"
            android:layout_alignParentLeft="true"
            android:text="987204672" />

        <TextView
            android:id="@+id/text_view_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_user"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/text_view_invite"
            android:layout_alignParentLeft="true"
            android:text="987204672" />



    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_parent"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>