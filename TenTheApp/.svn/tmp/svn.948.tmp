<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tenBlue">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@color/loginGreen">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/white_backicon"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Back"
            android:textColor="@color/whitetransparent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/regText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Register"
            android:textColor="@color/whitetransparent"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/inner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/password_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="@string/password_txt1"
            android:textColor="@color/whitetransparent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/password_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/password_txt2"
            android:textColor="@color/whitetransparent"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/password_edttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/whitetransparent"
                android:textColorHint="@color/whitetransparent"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/password_check_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/cross_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="15dp"
            android:background="@color/whitetransparent" />

        <RelativeLayout
            android:id="@+id/confirmpassword_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/confirm_password_edttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/whitetransparent"
                android:textColorHint="@color/whitetransparent"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/confirmpassword_check_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/cross_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="15dp"
            android:background="@color/whitetransparent" />

        <Button
            android:id="@+id/password_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:background="@drawable/landing_button"
            android:clickable="false"
            android:enabled="false"
            android:text="Next"
            android:textColor="@color/whitetransparent" />
    </LinearLayout>
</RelativeLayout>
