<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/inner_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/followingImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tabbar4selected" />

        <TextView
            android:id="@+id/followingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/followingImg"
            android:text="testing name"
            android:textColor="@color/blacktransparent"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/lineview"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/inner_layout"
        android:background="@color/gray" />
</RelativeLayout>