<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nvcomputers.ten.views.profile.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Nidhi"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/image_view_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/actions"
                android:backgroundTint="@android:color/white" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_icon"
                android:backgroundTint="@android:color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_head"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/image_view_profile"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/tv_to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_view_profile"
                android:text="Top time:"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/text_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_to_time"
                android:alpha="0.8"

                android:text="12 m"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_to_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/image_view_profile"
                android:text="Posts:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_view_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tv_posts"
                android:alpha="0.8"

                android:text="335"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/text_view_time"
                android:text="Followers"
                android:textColor="@color/tenBlue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_view_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_followers"
                android:paddingLeft="5dp"
                android:text=" "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_to_time"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/text_view_time"
                android:text="Following"
                android:textColor="@color/tenBlue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_view_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tv_following"
                android:paddingLeft="5dp"
                android:text=" "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_view_follow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_following"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                android:background="@drawable/rounded_btn_green"
                android:gravity="center"
                android:padding="3dp"
                android:text="Following"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/rl_parent"
            android:layout_margin="10dp"
            android:background="@color/light_grey"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_view_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="dewod"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_status"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="description" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_top_timers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_2">

            <TextView
                android:id="@+id/tv_timers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Top Timers"
                android:textColor="@color/tenBlue"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/text_view_user_blocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_timers"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="User Is Blocked"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="italic"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/pro_bar_profile_top_timers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_user_blocked"
                android:layout_marginTop="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_top_timers"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/tv_timers"
                android:layout_margin="10dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top_timers"
            android:layout_margin="10dp"
            android:text="Posts"
            android:textColor="@color/tenBlue"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/text_view_no_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:text="No Active  Posts"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="italic"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pro_bar_profile_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post"
            android:layout_marginTop="20dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_posts"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_alignLeft="@+id/tv_post"
            android:layout_alignStart="@+id/tv_post"
            android:layout_alignTop="@+id/pro_bar_profile_posts"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
</ScrollView>