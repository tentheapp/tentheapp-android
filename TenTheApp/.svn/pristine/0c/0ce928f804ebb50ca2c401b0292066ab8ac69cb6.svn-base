<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="3.5dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/com_adobe_image_promo_header_banner_logged" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageView05"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:padding="@dimen/com_adobe_image_promo_content_padding">

            <com.adobe.android.ui.view.AdobeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/feather_promo_title1"
                android:textAppearance="@style/AdobeImageWidget.TextAppearance.Large"
                app:adobe_fontFamily="?attr/com_adobe_font_regular" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
