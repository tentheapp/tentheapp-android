<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_post_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/image_back"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/white_backicon"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/action"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/actions"
                android:backgroundTint="@android:color/white" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_layout" />

        <RelativeLayout
            android:id="@+id/swipeBtns"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/topbtn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/white_upicon" />

            <TextView
                android:id="@+id/rightbtn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:drawableRight="@drawable/white_forwordicon"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/btnBottom"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/white_downicon" />


            <TextView
                android:id="@+id/lefttbtn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/white_backicon"
                android:paddingLeft="10dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/swipeLeftBtn"
            android:layout_width="10dp"
            android:layout_height="380dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/swipeBtns" />

        <RelativeLayout
            android:id="@+id/swipeRightBtn"
            android:layout_width="10dp"
            android:layout_height="400dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/swipeBtns" />
    </RelativeLayout>
</FrameLayout>

