<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- selected -->
    <item
        android:state_selected="true"
        android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_adobe_image_editor_text_overlay_corners" />
            <stroke
                android:color="@color/com_adobe_image_white_pressed"
                android:width="@dimen/com_adobe_image_editor_text_overlay_stroke_size" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- selected and pressed -->
    <item
        android:state_selected="true"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_adobe_image_editor_text_overlay_corners" />
            <stroke
                android:color="@android:color/white"
                android:width="@dimen/com_adobe_image_editor_text_overlay_stroke_size" />
            <solid android:color="@android:color/transparent" />
        </shape>
        </item>

    <!-- selected and focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_adobe_image_editor_text_overlay_corners" />
            <stroke
                android:color="@color/com_adobe_image_white_pressed"
                android:width="@dimen/com_adobe_image_editor_text_overlay_stroke_size" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- default -->
    <item android:drawable="@android:color/transparent" />
</selector>