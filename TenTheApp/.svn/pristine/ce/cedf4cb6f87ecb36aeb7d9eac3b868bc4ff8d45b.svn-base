    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/post_hollow"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/tv_posts"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="posts"
            android:textColor="@color/tenBlue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_posts"
            android:text="10"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/post_top_middle_line"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/tv_posts"
            android:layout_below="@+id/tv_posts"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey" />

        <TextView
            android:id="@+id/tv_to_time"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_top_middle_line"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="top time"
            android:textColor="@color/tenBlue"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_top_middle_line"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_to_time"
            android:text="10"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_following"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/text_view_following"
            android:text="following"
            android:textColor="@color/tenBlue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_following"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/followingLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/tv_followers"
            android:layout_alignRight="@+id/text_view_following"
            android:layout_below="@+id/tv_following"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey" />

        <TextView
            android:id="@+id/tv_followers"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/followingLine"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/text_view_followers"
            android:text="followers"
            android:textColor="@color/tenBlue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_followers"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/followingLine"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/myprofilelarge" />

    <TextView
        android:id="@+id/text_view_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="edit"
        android:textColor="@color/gray" />

