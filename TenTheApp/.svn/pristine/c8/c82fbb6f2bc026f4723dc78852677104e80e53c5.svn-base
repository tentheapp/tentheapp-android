<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/adobe_csdk_background_color">

    <ImageView
        android:id="@+id/adobe_csdk_common_view_error_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/adobe_csdk_no_internet_connection" />

    <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKBoldTextView
        android:id="@+id/adobe_csdk_common_view_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adobe_csdk_common_view_error_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="center"
        android:paddingTop="@dimen/adobe_csdk_common_error_view_padding"
        android:text="@string/adobe_csdk_common_error_view_no_internet_connection"
        android:textColor="@color/adobe_csdk_asset_browser_light_text"
        android:textSize="@dimen/adobe_csdk_common_error_view_textSize" />

</RelativeLayout>